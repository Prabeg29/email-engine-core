{
  "compilerOptions": {
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "moduleDetection": "force",

    "strict": true,
    "strictNullChecks": true,

    "module": "commonjs",
    "outDir": "lib",

    "lib": ["es6","dom"],
  },
  "include": ["src/**/*.ts"],
}
